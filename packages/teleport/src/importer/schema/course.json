{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "gradebook-course",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "name", "semester", "credit_hours", "cutoffs"
  ],
  "properties": {
    "name": {
      "type": "string",
      "pattern": "^[A-Z]{3,4} \\d{3,4}$"
    },
    "semester": {
      "type": "string",
      "pattern": "^\\d{4}[SUFW]$"
    },
    "credit_hours": {
      "anyOf": [{
        "type": "number",
        "minimum": 0,
        "maximum": 5
      }, {
        "type": "null"
      }]
    },
    "categories": {
      "type": "array",
      "items": {"$ref": "gradebook-category"}
    },
    "cutoffs": {
      "type": "string",
      "minLength": 10,
      "maxLength": 200
    }
  }
}
