{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "skipLibCheck": true,
    "target": "es2021",
    "module": "es2022",
    "sourceMap": true,
    "lib": [
      "es6",
      "es2021"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
