{
  "name": "@gradebook/utils",
  "description": "Shared utilities used by Gradebook",
  "repository": "git@github.com:gradebook/utils",
  "authors": [
    "Josh Costa <joshcosta38@tamu.edu>",
    "Vikas Potluri <vikaspotluri123.github@gmail.com>",
    "Ramsay Smith <ramsaysmith@outlook.com>"
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "node scripts/lerna.js && lerna",
    "new": "node scripts/new.js"
  },
  "devDependencies": {
    "@types/mocha": "7.0.1",
    "@types/node": "13.7.4",
    "@typescript-eslint/eslint-plugin": "2.20.0",
    "@typescript-eslint/parser": "2.20.0",
    "chai": "4.2.0",
    "eslint-config-xo-typescript": "0.26.0",
    "execa": "4.0.0",
    "fs-extra": "*",
    "lerna": "3.20.2",
    "mocha": "7.1.0",
    "nyc": "15.0.0",
    "sinon": "9.0.0",
    "typescript": "3.8.3",
    "xo": "0.26.1"
  },
  "xo": {
    "extends": "xo-typescript",
    "extensions": [
      "js",
      "ts"
    ],
    "ignores": [
      "lib"
    ],
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "func-name-matching": "off",
      "@typescript-eslint/restrict-template-expressions": [
        "error",
        {
          "allowBoolean": true,
          "allowNumber": true
        }
      ]
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "@typescript-eslint/no-unused-expressions": "off",
          "@typescript-eslint/no-var-requires": "off",
          "@typescript-eslint/explicit-function-return-type": "off"
        }
      }
    ]
  }
}
