{
  "name": "@gradebook/utils",
  "description": "Shared utilities used by Gradebook",
  "repository": "git@github.com:gradebook/utils",
  "authors": [
    "Josh Costa <joshcosta38@tamu.edu>",
    "Vikas Potluri <vikaspotluri123.github@gmail.com>",
    "Ramsay Smith <ramsaysmith@outlook.com>"
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lerna": "node scripts/lerna.js && lerna",
    "new": "node scripts/new.js"
  },
  "devDependencies": {
    "@types/mocha": "7.0.1",
    "@types/node": "13.7.0",
    "chai": "4.2.0",
    "fs-extra": "*",
    "lerna": "3.20.2",
    "mocha": "7.0.1",
    "nyc": "15.0.0",
    "sinon": "8.1.1",
    "typescript": "3.7.5",
    "xo": "0.25.3"
  },
  "xo": {
    "ignores": [
      "lib"
    ],
    "rules": {
      "func-names": [
        "error",
        "as-needed"
      ],
      "func-name-matching": "off"
    },
    "overrides": [
      {
        "files": "__tests__/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off"
        }
      }
    ]
  }
}
