{
  "name": "@gradebook/utils",
  "description": "Shared utilities used by Gradebook",
  "repository": "git@github.com:gradebook/utils",
  "authors": [
    "Josh Costa <joshcosta38@tamu.edu>",
    "Vikas Potluri <vikaspotluri123.github@gmail.com>",
    "Ramsay Smith <ramsaysmith@outlook.com>"
  ],
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "xo",
    "lerna": "node scripts/lerna.js && lerna",
    "tsc": "node scripts/tsc.js && tsc",
    "new": "node scripts/new.js"
  },
  "devDependencies": {
    "@types/mocha": "10.0.0",
    "@types/node": "16.11.6",
    "c8": "7.12.0",
    "chai": "4.3.6",
    "eslint-plugin-mocha": "10.1.0",
    "execa": "6.1.0",
    "fs-extra": "10.1.0",
    "lerna": "6.0.1",
    "mocha": "10.1.0",
    "sinon": "14.0.1",
    "typescript": "4.8.4",
    "xo": "0.52.4"
  },
  "xo": {
    "ignores": [
      "lib"
    ],
    "extends": [
      "plugin:mocha/recommended"
    ],
    "plugins": "mocha",
    "rules": {
      "@typescript-eslint/restrict-template-expressions": "off",
      "node/prefer-global/process": "off",
      "node/prefer-global/buffer": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/no-implicit-any-catch": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "// BelowRuleIsOffBecause it complains w/ optional chaining": "off",
      "@typescript-eslint/no-confusing-void-expression": "off",
      "no-unused-expressions": "error",
      "camelcase": "error",
      "unicorn/prefer-node-protocol": "off",
      "unicorn/prefer-module": "off",
      "func-names": [
        "error",
        "as-needed"
      ],
      "func-name-matching": "off"
    },
    "overrides": [
      {
        "files": "**/*.ts",
        "rules": {
          "@typescript-eslint/consistent-type-definitions": ["error", "interface"],
          "@typescript-eslint/ban-types": [
            "error",
            {
              "extendDefaults": true,
              "types": {
                "[]": "Don't use the empty array type `[]`. It only allows empty arrays. Use `SomeType[]` instead.",
                "object": {
                  "message": "The `object` type is hard to use. Use `Record<string, unknown>` instead. See: https: //github.com/typescript-eslint/typescript-eslint/pull/848",
                  "fixWith": "Record<string, unknown>"
                }
              }
            }
          ]
        }
      },
      {
        "files": "packages/**/__tests__/**/*.js",
        "envs": [
          "node",
          "mocha"
        ],
        "rules": {
          "func-names": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off",
          "no-var-requires": "off",
          "explicit-function-return-type": "off"
        }
      },
      {
        "files": "scripts/**/*",
        "rules": {
          "unicorn/no-process-exit": "off"
        }
      }
    ]
  }
}
